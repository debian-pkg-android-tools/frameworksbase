--- /dev/null	1970-01-01 00:00:00.000000000 +0000
+++ androidframeworksbase/tools/aidl/Makefile	2012-11-25 23:51:07.471818379 +0100
@@ -0,0 +1,32 @@
+#!/bin/make
+
+CC = g++
+
+SOURCES = aidl.cpp \
+          aidl_language.cpp \
+          aidl_language_l.cpp \
+          aidl_language_y.cpp \
+          AST.cpp \
+          generate_java.cpp \
+          generate_java_binder.cpp \
+          generate_java_rpc.cpp \
+          options.cpp \
+          search_path.cpp \
+          Type.cpp
+
+OBJECTS = $(SOURCES:.cpp=.o)
+CPPFLAGS = -DOS_CASE_SENSITIVE -DOS_PATH_SEPARATOR="'/'"
+
+all: generate $(OBJECTS)
+	$(CC) $(OBJECTS) -o aidl
+
+generate:
+	yacc -d -o aidl_language_y.cpp aidl_language_y.y
+	mv aidl_language_y.hpp aidl_language_y.h
+	lex -o aidl_language_l.cpp aidl_language_l.l
+
+clean:
+	rm -f aidl
+	rm -f $(OBJECTS)
+	rm -f aidl_language_l.cpp aidl_language_y.cpp aidl_language_y.h
+
